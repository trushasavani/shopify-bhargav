<head>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>


<div class="home-page-bg" style="background-image: url('https://www.caratlane.com/blog/wp-content/uploads/2023/10/1B-14.jpg');">
<div class="container-1">
  <div class="overlay-text">
    <h2 class="responsive-heading">{{ section.settings.heading_text | default: "Exclusive Offers" }}</h2>
    <p class="responsive-heading">{{ section.settings.description_text | default: "Limited Time Deals!" }}</p>

    <button class="custom-button" style="background-color: {{ section.settings.button_background_color }}; border-radius: {{ section.settings.button_border_radius }}px; color: {{ section.settings.text_color }};">
      {{ section.settings.button_text }}
    </button>

    {% include 'card' with 
      card_1_image: section.settings.card_1_image,
      card_2_image: section.settings.card_2_image,
      card_3_image: section.settings.card_3_image,
      card_1_special_price: section.settings.card_1_special_price,
      card_1_product_name: section.settings.card_1_product_name,
      card_1_explore_text: section.settings.card_1_explore_text,
      card_1_explore_url: section.settings.card_1_explore_url,
      card_2_special_price: section.settings.card_2_special_price,
      card_2_product_name: section.settings.card_2_product_name,
      card_2_explore_text: section.settings.card_2_explore_text,
      card_2_explore_url: section.settings.card_2_explore_url,
      card_3_special_price: section.settings.card_3_special_price,
      card_3_product_name: section.settings.card_3_product_name,
      card_3_explore_text: section.settings.card_3_explore_text,
      card_3_explore_url: section.settings.card_3_explore_url
    %}
  </div>
</div>
</div>
<div class="custom-container">
  <div class="image-row">
    <!-- Image 1 -->
    <img src="{{ settings.image_1 | default: 'https://media.istockphoto.com/id/483955929/photo/treasure.jpg?s=612x612&w=0&k=20&c=YTKQ9NUfvJUKXX-k6Os_XixMQ9vjDWhdwclBmV_uVas=' }}" alt="Image 1" class="image">
    
    <!-- Image 2 -->
    <img src="{{ settings.image_2 | default: 'https://img.onmanorama.com/content/dam/mm/en/news/business/images/2021/1/6/gold-jewellry-treasure.jpg' }}" alt="Image 2" class="image">
    
    <!-- Image 3 -->
    <img src="{{ settings.image_3 | default: 'https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTqXuahjHAyblCPAv-WkLtlTl4fblIxL2eX4A4eWw-BZdq90YmRcjuTzD9_1rdVhXSqsf0&usqp=CAU' }}" alt="Image 3" class="image">  
  </div>
</div>

